// Randomly change case of letters in header title
var chance;
var headerTitle = document.querySelector('#header-title');

headerTitle.textContent = headerTitle.textContent.split('').map(function(letter) {
  chance = Math.round(Math.random());
  return letter = chance ? letter.toUpperCase() : letter.toLowerCase();
}).join('');
